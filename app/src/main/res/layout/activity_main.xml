<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPurple"
    android:gravity="top"
    >
    <TextView android:id="@+id/txt"
        android:layout_width="100in"
        android:layout_height="40dp"
        android:text="Nowaday"
        android:background="@color/white"
        />
    <Button android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:layout_below="@+id/txt"
        android:onClick="btn7"
        />
    <Button android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:layout_below="@+id/txt"
        android:layout_toRightOf="@id/btn7"
        android:onClick="btn8"
        />
    <Button android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:layout_below="@+id/txt"
        android:layout_toRightOf="@+id/btn8"
        android:onClick="btn9"
        />
    <Button android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_below="@+id/btn7"
        android:onClick="btn4"
        />
    <Button android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:layout_toRightOf="@id/btn4"
        android:layout_below="@+id/btn8"
        android:onClick="btn5"
        />
    <Button android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:layout_toRightOf="@id/btn5"
        android:layout_below="@id/btn9"
        android:onClick="btn6"
        />
    <Button android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_below="@id/btn4"
        android:onClick="btn1"
        />
    <Button android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_toRightOf="@id/btn1"
        android:layout_below="@id/btn5"
        android:onClick="btn2"
        />
    <Button android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_toRightOf="@id/btn2"
        android:layout_below="@id/btn6"
        android:onClick="btn3"
        />
    <Button android:id="@+id/btn0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_below="@id/btn1"
        android:onClick="btn0"
        />
    <Button android:id="@+id/btnPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_toRightOf="@id/btn9"
        android:layout_below="@id/txt"
        android:onClick="btnPlus"
        />
    <Button android:id="@+id/btnMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_below="@id/btnPlus"
        android:layout_toRightOf="@id/btn6"
        android:onClick="btnMinus"
        />
    <Button android:id="@+id/btnMultiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:layout_below="@id/btnMinus"
        android:layout_toRightOf="@id/btn3"
        android:onClick="btnMultiply"
        />
    <Button android:id="@+id/btnDivide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:layout_below="@id/btnMultiply"
        android:layout_toRightOf="@id/btnEqual"
        android:onClick="btnDivide"
        />
    <Button android:id="@+id/btnEqual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:layout_toRightOf="@id/btnX"
        android:layout_below="@id/btn3"
        android:onClick="btnEqual"
        />
    <Button android:id="@+id/btnX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:layout_toRightOf="@id/btn0"
        android:layout_below="@id/btn2"
        />

</RelativeLayout>